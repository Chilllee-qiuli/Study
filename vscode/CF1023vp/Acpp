#include<bits/stdc++.h>
using namespace std;
typedef long long ll;
const int maxn = 1e4 + 10;
int a[maxn];
int t;

int main(){
    ios::sync_with_stdio(0);
    cin.tie(0), cout.tie(0);
    cin >> t;
    while(t--){
        int n;
        cin >> n;
        int maxx = 0, minn = 1e5;
        for(int i = 1; i <= n; i++)
        {
            cin >> a[i];
            maxx = max(maxx, a[i]);
            minn = min(minn, a[i]);
        }

        if(maxx == minn) cout << "No" << endl;
        else {
            cout << "Yes" << endl;
            for(int i = 1; i <= n; i++)
            {
                if(a[i] == maxx) cout << 2 << " ";
                else cout << 1 << " ";
            }
            cout << endl;
        }
    }

	return 0;
}